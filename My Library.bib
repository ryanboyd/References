	keywords = {LIWC, Authorship Attribution, Psychology, Writing, Feature extraction, Semantics, Sentiment analysis, Computer science, Adversarial Authorship, Feature Selection, GEFeS, Sentiment Analysis, Steady-state, Steady-State Genetic Algorithm},
