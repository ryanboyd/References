	month = jan,
	year = {2012},
	pmid = {22176265},
	keywords = {Personality, Goals, Psychometrics, Female, Humans, Male, Reproducibility of Results, Self Concept, Adolescent, Adult, Interpersonal Relations, Surveys and Questionnaires, Self Efficacy, Social Values},
	pages = {39--52},
