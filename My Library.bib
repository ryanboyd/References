	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/jip.1542},
	keywords = {counter-interrogation strategies, human intelligence gathering, information elicitation, investigative interviewing, perspective taking, the Scharff technique},
