@article{barroilhet_characterizing_2020,
	title = {Characterizing {DSM}-5 and {ICD}-11 personality disorder features in psychiatric inpatients at scale using electronic health records},
	volume = {50},
	issn = {0033-2917, 1469-8978},
	url = {https://www.cambridge.org/core/journals/psychological-medicine/article/characterizing-dsm5-and-icd11-personality-disorder-features-in-psychiatric-inpatients-at-scale-using-electronic-health-records/D0D86638A5C02B2B566531A613BA2D60},
