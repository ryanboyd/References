@article{orvell_how_2017,
	title = {How "you" makes meaning},
	volume = {355},
	issn = {0036-8075},
	url = {http://science.sciencemag.org/content/355/6331/1299},
	doi = {10.1126/science.aaj2014},
	abstract = {Sometimes \{\${\textbackslash}backslash\$textquotedblleft\}you\{\${\textbackslash}backslash\$textquotedblright\} is used when addressing another person, but in many situations, \{\${\textbackslash}backslash\$textquotedblleft\}you\{\${\textbackslash}backslash\$textquotedblright\} is used to indicate anyone or everyone\{\${\textbackslash}backslash\$textemdash\}the generic \{\${\textbackslash}backslash\$textquotedblleft\}you.\{\${\textbackslash}backslash\$textquotedblright\} Orvell et al. studied the underlying psychological function of the generic \{\${\textbackslash}backslash\$textquotedblleft\}you.\{\${\textbackslash}backslash\$textquotedblright\} When asked to write about a past negative experience, people were more likely to distance themselves and derive meaning from the experience if tasked with using the generic \{\${\textbackslash}backslash\$textquotedblleft\}you\{\${\textbackslash}backslash\$textquotedblright\} rather than the first-person pronoun \{\${\textbackslash}backslash\$textquotedblleft\}I.\{\${\textbackslash}backslash\$textquotedblright\}Science, this issue p. 1299\{\${\textbackslash}backslash\$textquotedblleft\}You\{\${\textbackslash}backslash\$textquotedblright\} is one of the most common words in the English language. Although it typically refers to the person addressed (\{\${\textbackslash}backslash\$textquotedblleft\}How are you?\{\${\textbackslash}backslash\$textquotedblright\}), \{\${\textbackslash}backslash\$textquotedblleft\}you\{\${\textbackslash}backslash\$textquotedblright\} is also used to make timeless statements about people in general (\{\${\textbackslash}backslash\$textquotedblleft\}You win some, you lose some.\{\${\textbackslash}backslash\$textquotedblright\}). Here, we demonstrate that this ubiquitous but understudied linguistic device, known as \{\${\textbackslash}backslash\$textquotedblleft\}generic-you,\{\${\textbackslash}backslash\$textquotedblright\} has important implications for how people derive meaning from experience. Across six experiments, we found that generic-you is used to express norms in both ordinary and emotional contexts and that producing generic-you when reflecting on negative experiences allows people to \{\${\textbackslash}backslash\$textquotedblleft\}normalize\{\${\textbackslash}backslash\$textquotedblright\} their experience by extending it beyond the self. In this way, a simple linguistic device serves a powerful meaning-making function.},
	number = {6331},
	journal = {Science},
	author = {Orvell, Ariana and Kross, Ethan and Gelman, Susan A},
	year = {2017},
	pages = {1299--1302}
}

@article{toma_tell-tale_2015,
