}
@article{Robinson2014,
abstract = {Theories of self-regulation emphasize the special role that the symbolic self may play in approach and avoidance movements, but experimental evidence is lacking. In two experiments (total N = 157), participants moved either a self-relevant (e.g., “me”) or non-self (e.g., “not me”) agent to one of two locations, one occupied by a positive word and the other occupied by a negative word. In both experiments, movement agent interacted with destination valence such that it was only the symbolic self that moved more quickly to positive than negative locations. These results establish a role for the symbolic self in approach/avoidance that had been questioned, thereby supporting both classic and contemporary self-related theories of approach and avoidance.},
