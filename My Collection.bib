keywords = {Big Five,Entrepreneurs vs. managers,LIWC,Personality,Receptiviti,Superstars,Twitter},
pages = {13--23},
title = {{Using digital footprints in entrepreneurship research: A Twitter-based personality analysis of superstar entrepreneurs and managers}},
