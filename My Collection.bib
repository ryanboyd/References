	journal = {Personality and Individual Differences},
	author = {Robinson, Michael D. and Boyd, Ryan L. and Fetterman, Adam K.},
	year = {2014},
	keywords = {Anger, Anxiety, Approach, Avoidance, Linguistic analysis, Political ideology},
