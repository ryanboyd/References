issn = {1099-0984},
journal = {European Journal of Personality},
number = {3},
pages = {171--203},
publisher = {John Wiley {\&} Sons, Ltd.},
title = {{The lexical approach to personality: A historical review of trait taxonomic research}},
url = {http://dx.doi.org/10.1002/per.2410020302},
volume = {2},
year = {1988}
}
