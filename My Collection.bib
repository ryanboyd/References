keywords = {*Cognitive Linguistics,*Emotional Regulation,*Language,*Psychological Distance,Emotions,Mental Health,Well Being},
number = {3},
pages = {337--346},
publisher = {American Psychological Association},
title = {{A linguistic signature of psychological distancing in emotion regulation.}},
volume = {146},
year = {2017}
}
@article{Orvell1299,
abstract = {Sometimes {\{}$\backslash$textquotedblleft{\}}you{\{}$\backslash$textquotedblright{\}} is used when addressing another person, but in many situations, {\{}$\backslash$textquotedblleft{\}}you{\{}$\backslash$textquotedblright{\}} is used to indicate anyone or everyone{\{}$\backslash$textemdash{\}}the generic {\{}$\backslash$textquotedblleft{\}}you.{\{}$\backslash$textquotedblright{\}} Orvell et al. studied the underlying psychological function of the generic {\{}$\backslash$textquotedblleft{\}}you.{\{}$\backslash$textquotedblright{\}} When asked to write about a past negative experience, people were more likely to distance themselves and derive meaning from the experience if tasked with using the generic {\{}$\backslash$textquotedblleft{\}}you{\{}$\backslash$textquotedblright{\}} rather than the first-person pronoun {\{}$\backslash$textquotedblleft{\}}I.{\{}$\backslash$textquotedblright{\}}Science, this issue p. 1299{\{}$\backslash$textquotedblleft{\}}You{\{}$\backslash$textquotedblright{\}} is one of the most common words in the English language. Although it typically refers to the person addressed ({\{}$\backslash$textquotedblleft{\}}How are you?{\{}$\backslash$textquotedblright{\}}), {\{}$\backslash$textquotedblleft{\}}you{\{}$\backslash$textquotedblright{\}} is also used to make timeless statements about people in general ({\{}$\backslash$textquotedblleft{\}}You win some, you lose some.{\{}$\backslash$textquotedblright{\}}). Here, we demonstrate that this ubiquitous but understudied linguistic device, known as {\{}$\backslash$textquotedblleft{\}}generic-you,{\{}$\backslash$textquotedblright{\}} has important implications for how people derive meaning from experience. Across six experiments, we found that generic-you is used to express norms in both ordinary and emotional contexts and that producing generic-you when reflecting on negative experiences allows people to {\{}$\backslash$textquotedblleft{\}}normalize{\{}$\backslash$textquotedblright{\}} their experience by extending it beyond the self. In this way, a simple linguistic device serves a powerful meaning-making function.},
author = {Orvell, Ariana and Kross, Ethan and Gelman, Susan A},
doi = {10.1126/science.aaj2014},
issn = {0036-8075},
journal = {Science},
number = {6331},
pages = {1299--1302},
publisher = {American Association for the Advancement of Science},
title = {{How "you" makes meaning}},
